# FinScore Analyzer - Production Environment Variables
# This file should be configured in Google Cloud Run environment variables

# Database Configuration (Google Cloud SQL)
DATABASE_URL=postgresql://finscore_app:${SQL_PASSWORD}@localhost:5432/finscore_analyzer?host=/cloudsql/${PROJECT_ID}:us-central1:finscore-db

# Google Cloud Platform Configuration
GCP_PROJECT_ID=${PROJECT_ID}
GCP_SQL_CONNECTION_NAME=${PROJECT_ID}:us-central1:finscore-db
GOOGLE_APPLICATION_CREDENTIALS=/app/service-account.json

# Application Configuration
NODE_ENV=production
NEXTAUTH_URL=https://finscore-analyzer-${RANDOM_SUFFIX}-uc.a.run.app
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}

# File Upload Configuration (Google Cloud Storage)
GCS_BUCKET_NAME=finscore-uploads-${PROJECT_ID}
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_ANALYSIS=true
ENABLE_API=true

# Analytics & Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Security
CORS_ORIGIN=https://finscore-analyzer-${RANDOM_SUFFIX}-uc.a.run.app
API_RATE_LIMIT=100

# Performance
MAX_CONCURRENT_REQUESTS=80
REQUEST_TIMEOUT=30000